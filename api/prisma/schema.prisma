generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Auth {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  userId   String?
  role     UserRole

  @@map("Auth")
}

model Patient {
  id          String    @id @default(uuid())
  firstName   String
  lastName    String
  dateOfBirth String?
  bloodGroup  String?
  mobile      String?
  city        String?
  state       String?
  zipCode     String?
  country     String?
  email       String    @unique
  address     String?
  img         String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  booking     Booking[]

  @@map("Patient")
}

model Doctor {
  id         String     @id @default(uuid())
  firstName  String
  lastName   String
  middleName String?
  email      String     @unique
  address    String?
  img        String?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  booking    Booking[]
  TimeSlot   TimeSlot[]

  @@map("Doctor")
}

model Booking {
  id        String  @id @default(uuid())
  patientId String
  patient   Patient @relation(fields: [patientId], references: [id])

  doctorId String
  doctor   Doctor @relation(fields: [doctorId], references: [id])

  appointmentTime DateTime
  purpose         String?
  paidtype        PaidType?
  status          AppointmentStatus?
  totalAmount     Int
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  @@map("Booking")
}

model TimeSlot {
  id String @id @default(uuid())

  doctorId String
  doctor   Doctor @relation(fields: [doctorId], references: [id])

  start          String
  end            String
  day            String
  weekDay        String
  maximumPatient Int?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("TimeSlot")
}

enum UserRole {
  admin
  patient
  doctor
}

enum PaidType {
  online
  cash
}

enum AppointmentStatus {
  accept
  cancel
}
